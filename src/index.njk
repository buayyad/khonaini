activePage: about
permalink: /
---

<!-- Hero Banner + Profile Photo -->
<section class="hero-banner">
    <img src="/assets/banner.svg" alt="Banner" class="banner-img">
    <div class="hero-profile">
        <div class="container">
            <div class="profile-wrapper">
                <img src="/assets/profile.svg" alt="{{ site.title }}" class="profile-img">
                <div class="profile-info">
                    <h1>{{ site.title }}</h1>
                    <p class="hero-subtitle">{{ site.subtitle }}</p>
                    <p class="hero-tagline">{{ site.tagline }}</p>
                    <div class="hero-links">
                        <a href="{{ site.linkedin }}" target="_blank" rel="noopener" class="social-link" aria-label="LinkedIn">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                        </a>
                        <a href="{{ site.twitter }}" target="_blank" rel="noopener" class="social-link" aria-label="X (Twitter)">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section class="section" id="about">
    <div class="container">
        <h2 class="section-title">About</h2>
        <div class="about-content">
            {% for paragraph in about.paragraphs %}
            <p>{{ paragraph | safe }}</p>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Education Section -->
<section class="section section-alt" id="education">
    <div class="container">
        <h2 class="section-title">Education</h2>
        <div class="about-content">
            {% for paragraph in about.education %}
            <p>{{ paragraph | safe }}</p>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Research Section -->
<section class="section" id="research">
    <div class="container">
        <h2 class="section-title">Research</h2>
        <div class="about-content">
            {% for paragraph in about.research %}
            <p>{{ paragraph | safe }}</p>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Awards Section -->
<section class="section section-alt" id="awards">
    <div class="container">
        <h2 class="section-title">Awards</h2>
        <div class="awards-list">
            {% for award in about.awards %}
            <div class="award-item">
                <div class="award-year">{{ award.year }}</div>
                <div class="award-details">
                    <h3>{{ award.title }}</h3>
                    <p>{{ award.description }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
